# Server
NODE_ENV=development
PORT=8000
BASE_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/webar_furniture?schema=public"
# For SQLite (alternative):
# DATABASE_URL="file:./dev.db"

# echo3D API
ECHO3D_API_KEY=your_echo3d_api_key_here
ECHO3D_SECURITY_KEY=your_echo3d_security_key_here
ECHO3D_API_URL=https://api.echo3d.com

# Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.glb

# Polling Settings
USDZ_POLLING_INTERVAL=15000
USDZ_POLLING_TIMEOUT=300000

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
